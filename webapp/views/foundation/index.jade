doctype html5
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Unherd
    link(rel='stylesheet', href='/foundation/stylesheets/style.css')
    link(rel='stylesheet', href='/foundation/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/foundation/stylesheets/dev.css')
    script(src='/foundation/bower_components/modernizr/modernizr.js')
    script(src="/foundation/js/newtheme/pace.min.js")
  body
 
    .off-canvas-wrap
      .inner-wrap
        nav.tab-bar.fixed
          section.left-small.no-Br
            b.notify 5
            a.left-off-canvas-toggle.menu-icon
              span
          .row
            ul.title-area.left
              li.name.hide-for-small.hide-for-medium
                h1
                  a(href='#') UnHerd.co
          .tweetComposer.right
            a.button(href='#', data-dropdown='composer', data-options='align:left')
              i.fa.fa-pencil-square-o.fa-2x
            #composer.f-dropdown.content(data-dropdown-content='data-dropdown-content')
              form
                .row
                  label
                    textarea.radius(placeholder='Compose tweet', rows='5', id="TweetText")
                  input#TwBtn.button.tiny.radius.no-Mn(type='button', value='Tweet')
                  span(style='position: relative;')
                    i.fa.fa-picture-o
                    small  Add image
                    input(type='file', style='position: absolute; top: 0; left: 0; opacity: 0;')
                  span.no-Mn.right 140
        aside.left-off-canvas-menu
          ul.off-canvas-list
            .large-24.columns
              ul.title-area.left.no-Mn-Lt
                li.name.hide-for-large.hide-for-medium.left
                  h3.no-Mn
                    a(href='#') UnHerd
              ul.large-block-grid-2.left
                li
                  a(href='#', data-dropdown='message', data-options='is_hover:true')
                    i.fa.fa-envelope-o
                li
                  a(href='/logout')
                    i.fa.fa-sign-out
            .large-24.columns.no-Pg.profile
              .large-7.columns.no-Pg-Rt
                span.th.radius
                  img.radius(src='#{user.profile_pic}', alt='#{user.displayName}')
              .large-17.columns
                h4 #{user.displayName}
                h5 @#{user.username}
            .large-24.columns.text-center.no-Pg.twttrStatus
              .large-8.small-8.columns.no-Pg
                .large-24.columns.sectionHeader Tweets
                .large-24.columns.no-Pg
                  p#my_status_count #{user.statuses_count}
              .large-8.small-8.columns.no-Pg
                .large-24.columns.sectionHeader Following
                .large-24.columns.no-Pg
                  p#my_friends_count #{user.friends_count}
              .large-8.small-8.columns.no-Pg
                .large-24.columns.sectionHeader Followers
                .large-24.columns.no-Pg
                  p#my_followers_count #{user.followers_count}
            .large-24.columns.no-Pg.preferences
              h5.sectionHeader Select Preferences
              .large-24.columns
                form(style='margin: 10px 0;')
                  label
                    input(type='radio', value='1', required='', name="content_type", class="content_type" data-id="topstories")
                    | Top Stories
                  label
                    input(type='radio', value='1', required='', name="content_type", class="content_type" data-id="chatter")
                    | Chatter
        section.main-section
          .row
            .large-24.columns
              .tabs-content
                #panel2-1.content.active
                  .large-24.columns
                    ul#mainSection.large-block-grid-3.small-block-grid-1.medium-block-grid-2
                #panel2-2.content
                  p Chatter content
                #panel2-3.content
                  p Personal tweets
        a.exit-off-canvas
    //Tweet reply box 
    .tweetReply
      #reply.f-dropdown.content(data-dropdown-content='data-dropdown-content')
        form#normalBox
          .row
            input(type="hidden",value="",id="ReplyTo")
            label
              textarea.radius(placeholder='@username', rows='5',id="TweetText2")
            input.button.tiny.radius.no-Mn(type='button', value='Reply', id='REPLYBtn')
            span(style='position: relative;')              
            span.no-Mn.right 140
        form#recommendBox
          .row
            input(type="hidden",value="",id="ForwTweet")
            label
              input(placeholder="@username",class="radius typeahead",style="width: 100%;margin-bottom: 10px;",id="ForwardTo")
            label
              textarea.radius(placeholder='Your message', rows='5',id="RecText")
            input.button.tiny.radius.no-Mn(type='button', value='Forward', id='RcBtn')
            span(style='position: relative;')              
            span.no-Mn.right 140
    //Message Box 
    ul#message.f-dropdown(data-dropdown-content='data-dropdown-content')
      li
        a(href='#', data-reveal-id='msgModal', data-reveal='data-reveal') Message
      li
        a(href='#') This is another
      li
        a(href='#') Yet another
    //Message modal 
    #msgModal.reveal-modal.small(data-reveal='data-reveal', style='z-index: 100;')
      a.close-reveal-modal Ã—
      article.tweetBox.clearfix
        .large-3.small-3.columns.no-Pg
          img.radius(src='https://pbs.twimg.com/profile_images/420826194083213312/CP1RmLa3.jpeg', alt='Paul')
        .large-21.small-16.columns
          h1
            a(href='') Paul Irish
          h2
            a(href='') @paul_irish 
            span | 3s
        .large-24.small-24.columns.no-Pg
          .content
            p
              | With the continuous evolution of the Web, web industry job titles are created at a very impressive rate
              a(href='') http://bit.ly/P4pxXZ
        .large-24.columns
          .tweetAction
            ul.inline-list.right.no-Mn-Bm.hoverEffect
              li
                a(href='', title='Retweet')
                  i.fa.fa-retweet
                  | 4
              li
                a(href='', title='Favourite')
                  i.fa.fa-star
                  | 10
              li
                a(href='', title='Reply')
                  i.fa.fa-reply
              li
                a(href='', title='Forward')
                  i.fa.fa-mail-forward
    script(src='/foundation/bower_components/jquery/dist/jquery.min.js')
    script(src='/foundation/bower_components/foundation/js/foundation.min.js')
    script(src='/foundation/js/masonry.pkgd.min.js')
    script(src='/foundation/js/app.js')
    script(src="/foundation/js/newtheme/twitter-entities.js")
    script(src="/foundation/js/newtheme/bootstrap-typeahead.min.js")
    script(src="/foundation/js/newtheme/unherd.js")
